<Window x:Class="GUITasks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUITasks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Name ="GetProductsButton" Click="GetProductsButton_Click">Get Products</Button>
            <TextBox TextChanged="TextBox_TextChanged">Type in here while the products load...</TextBox>
            <ListBox Name="ProductsListBox"></ListBox>
        </StackPanel>
    </Grid>
</Window>
